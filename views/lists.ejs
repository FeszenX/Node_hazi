<%- include('header') %>
<%- include('welcome', {username: username}) %>

<div>
    <div class="my-container">
        <h3>Your Shopping list:</h3>

        <% lists.forEach(function (item){ %>
        <div>
            <form class="my-form" action="/lists/<%= item._id %>/delete" method="POST">
                <a class="col-md-2 col-xs-6 col-sm-3 my-link btn btn-success btn-sm" href="/list/<%= item._id %>"><%= item.name %></a>&nbsp;
                <input type="submit" class="btn btn-success btn-sm" value="Del">
            </form>
        </div><br/>
        <% }); %>

        <div class="clearfix"></div>
        <form class="my-form" method="POST" action="/lists/new">
            <input class="col-md-2 col-xs-6 col-sm-3" type="text" id="newName" name="newName" placeholder="+ Add new">&nbsp;
            <input type="submit" class="btn btn-success btn-sm add-list" value="Add">
        </form>
    </div>
</div>

<%- include('footer') %>